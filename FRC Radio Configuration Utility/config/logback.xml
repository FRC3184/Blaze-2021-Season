<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>frcwpakiosk.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>
    
    <logger name="frcradiokiosk.StaticDAO" level="warn"/>
    <logger name="frcradiokiosk.DAP1522revB" level="warn"/>
    <logger name="frcradiokiosk.ResourceHandler" level="warn"/>
    <logger name="frcradiokiosk.RadioConfigSequence" level="warn"/>
    <logger name="frcradiokiosk.HostComputer" level="debug"/>
    <logger name="frc.teamkiosk.FRC_Team_Kiosk" level="info"/>
    
    <root level="warn">
        <appender-ref ref="FILE"/>
    </root>
</configuration> 